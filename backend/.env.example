# MongoDB設定
MONGODB_URI=mongodb://root:password@mongodb:27017/twitter_scraper?authSource=admin
MONGODB_DATABASE=twitter_scraper

# Twitterアカウント（使い捨てアカウント推奨）
TWITTER_USERNAME=your_username
TWITTER_PASSWORD=your_password
TWITTER_EMAIL=your_email@example.com

# プロキシ設定（推奨）
# PROXY_SERVER=proxy.example.com:8080
# PROXY_USERNAME=proxy_user
# PROXY_PASSWORD=proxy_pass

# CAPTCHA解決サービス（オプション）
# CAPTCHA_SERVICE_API_KEY=your_2captcha_api_key

# ログレベル
LOG_LEVEL=INFO

# スクレイピング設定
SCRAPING_INTERVAL_MINUTES=15
RANDOM_DELAY_MAX_SECONDS=120
MAX_TWEETS_PER_SESSION=100

# アンチ検知設定
HEADLESS=true