{
  "name": "twix-saver",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && pnpm run dev",
    "dev": "docker-compose up",
    "dev:watch": "docker-compose up --build",
    "dev:backend": "pkill -f 'uvicorn.*src\\.web\\.app:app.*8000' || true && sleep 2 && docker-compose up -d mongodb && cd backend && source venv/bin/activate && uvicorn src.web.app:app --reload --host 0.0.0.0 --port 8000",
    "dev:docker": "docker-compose up backend mongodb",
    "dev:docker-only": "docker-compose up backend",
    "build:frontend": "pnpm run generate-types && cd frontend && pnpm run build",
    "install:frontend": "cd frontend && pnpm install",
    "install:backend": "cd backend && pip install -r requirements.txt",
    "generate-types": "cd backend && ./venv/bin/python scripts/simple-generate.py",
    "check-types-sync": "cd backend && python3 scripts/check-type-sync.py",
    "setup": "pnpm run install:frontend && pnpm run install:backend && pnpm run generate-types",
    "setup:docker": "cp backend/.env.example backend/.env && echo 'Please edit backend/.env with your Twitter credentials'",
    "lint:frontend": "cd frontend && pnpm run lint",
    "type-check:frontend": "cd frontend && pnpm run type-check",
    "logs": "docker-compose logs -f",
    "logs:backend": "docker-compose logs -f backend",
    "stop": "docker-compose down",
    "restart": "docker-compose restart",
    "clean": "docker-compose down -v",
    "test:backend": "cd backend && python main.py --stats",
    "prepare": "lefthook install"
  },
  "devDependencies": {
    "lefthook": "^1.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/twix-saver.git"
  }
}